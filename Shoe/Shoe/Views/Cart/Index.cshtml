
@{
    ViewData["Title"] = "Giỏ hàng";
}

<!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">

                        <div class="breadcrumb__option">
                            <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                            <span>Giỏ hàng</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Shoping Cart Section Begin -->
    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th class="shoping__product">Sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Tổng</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                 @for (int i =0; i< ViewBag.ListCartItem.Count;i++){
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="@ViewBag.ListCartItem[i].MainImg" alt="">
                                        <div class="item">
                                            <h5>@ViewBag.ListCartItem[i].ProductName</h5>
                                            <div style="display: flex">
                                                <p class="clearfix">
                                                    Màu: @ViewBag.ListCartItem[i].Color
                                                </p>
                                                <p class="clearfix">
                                                    Size: 35
                                                </p>
                                            </div>
                                        </div>
                                        
                                        
                                    </td>
                                    <td class="shoping__cart__price">@(ViewBag.ListCartItem[i].Price)đ</td>
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            <input type="hidden" value="@ViewBag.ListCart[i].Id" class="cartItemID"/>
                                            <input type="hidden" value="@ViewBag.ListCartItem[i].ProductId" class = "productID"/>
                                            <div class="pro-qty">
                                                <input type="text" value="@ViewBag.ListCart[i].Quantity"/>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="shoping__cart__total">@(@ViewBag.ListCartItem[i].Price * @ViewBag.ListCart[i].Quantity)đ</td>
                                    <td class="shoping__cart__item__close">
                                        <span class="icon_close" onclick="deleteCartItem( @ViewBag.ListCart[i].Id , this )"></span>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__btns">
                        <a href="Product/Collection" class="primary-btn cart-btn">TIẾP TỤC MUA HÀNG</a>
                        <a href="#" class="primary-btn cart-btn cart-btn-right"><span class="icon_loading"></span>
                            Cập nhật giỏ hàng</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shoping__continue">
                        <div class="shoping__discount">
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shoping__checkout">
                        <h5>Tạm tính</h5>
                        <ul>
                            <li>Tổng <span>@(ViewBag.TotalPrice)đ</span></li>
                        </ul>
                        <a asp-controller="Checkout" asp-action="Index" class="primary-btn">Tiến hành thanh toán</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shoping Cart Section End -->
